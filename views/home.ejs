<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Document</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg" style="background-color: #49A078;">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Calendar</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
    <div class="content">
      <div class="calendar">
        <div class="month"><h3><%= currentMonth %> <%= currentYear %></h3></div>
        <div class="days">
            <div class="day"><h4>Sun</h4></div>
            <div class="day"><h4>Mon</h4></div>
            <div class="day"><h4>Tue</h4></div>
            <div class="day"><h4>Wed</h4></div>
            <div class="day"><h4>Thu</h4></div>
            <div class="day"><h4>Fri</h4></div>
            <div class="day"><h4>Sat</h4></div>
            <% currentDays.forEach((week)=>{ %>
            <%   week.forEach((day)=>{ %>
            <%    if(day!=0){ %>
                  <a href="/<%=currentYear%>-<%= monthNo %>-<%= day %>"><div class="day <%=currentYear%>-<%= monthNo %>-<%= day %>"><h5 class="title-<%=currentYear%>-<%= monthNo %>-<%= day %>"><%=day%></h5></div></a>
            <%      }else{ %>
                  <div class="day"></div>
                  <%} %>
                  <%}) %>
                  <%}) %>
        </div>
    
      </div>

      <div class="form1">
        <form method="post">
          <button type="submit" name="button" class="up" value="up"></button>
          <div><label class="month" style="color:black"><%=currentMonth%></label></div>         
          <button type="submit" name="button" class="down" value="down"></button>
        </form>
      </div>
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    const events = JSON.parse('<%- events %>');
    console.log(events)
    events.forEach(event => {
      document.getElementsByClassName(`title-${event.year}-${event.month}-${event.date}`)[0].innerHTML = `${event.date} ${event.eventTitle}`;  
      if(event.eventType=="exam"){
        document.getElementsByClassName(`${event.year}-${event.month}-${event.date}`)[0].style.backgroundColor = "red";
      }else{
        document.getElementsByClassName(`${event.year}-${event.month}-${event.date}`)[0].style.backgroundColor = "gold";
      }
    });
  </script>
</body>
</html>